<form>
    <!-- Formulario de Inico de Sesion  -->
    <div class="p-4 d-flex justify-content-center align-items-center" id="log-in">
        <div class="card text-center p-4">
            <form class="card-body" id="formulario-login">
                <h3 class="mb-4">Iniciar Sesion</h3>
                <div data-mdb-input-init class="form-outline md-form mb-3">
                    <label for="nickname-0" class="form-label ml-label text-muted">Usuario</label>
                    <input type="text" id="nickname-0" class="form-control" name="inp-name" placeholder="Nick4302" required>
                </div>
                <div data-mdb-input-init class="form-outline md-form mb-4">
                    <label for="pass-0" class="form-label ml-label text-muted">Contraseña</label>
                    <input type="password" id="pass-0" class="form-control" name="inp-password" required>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="change" id="view-pass">
